<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<!-- <link rel="stylesheet" href="styles/styles.css"> -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
	<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
	<link rel="stylesheet" href="styles/footer.css" />
	<link rel="shortcut icon" href="img/favicon.png" type="image/png" />
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" />
	<link rel="stylesheet" href="./styles/chatbot.css" />
	<link rel="stylesheet" href="styles/nav.css" />
	<link rel="stylesheet" href="styles/blogs.css" />
	<title>Blog</title>
</head>


<section>


	<%- include('./partials/header.ejs') %>
		<%- include('./partials/chatbot.ejs') %>


			<div class="blog-title">
				<h1>BLOG</h1>
			</div>
			<div class="container pt-2">
				<% if (blogArray.length==0) { %>
					<h2 class="sorryh2">Sorry there is no blogs.</h2>
					<% } else { %>
						<% blogArray.reverse().forEach(blogFor=> { %>
							<div class="div-blog">
								<h1 class="d-flex justify-content-center">
									<%= blogFor.blog_title %>
								</h1>
								<img draggable="false" class="img-fluid rounded image-blog-img"
									src="<%= blogFor.image.split('upload/')[0]+'upload/f_auto,q_10/'+blogFor.image.split('upload/')[1] %>"
									alt="" />
								<p>
									<%= blogFor.blog_content %>
								</p>
							</div>
							<% }) %>
								<% } %>
			</div>
</section>


<%- include('./partials/footer.ejs') %>



	<script src="./javascript/chatbot.js"></script>
	<script src="../javascript/nav.js"></script>
	</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Clints</title>
</head>

<body>
    <%- include('../partials/admin-header.ejs') %>


        <div class="container">
            <a href="/admin/client/create">Create Item</a>
        </div>
        <div class="container pt-3 pl-3">
            <table class="table table-bordered">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Client Name</th>
                    <th scope="col">Client Logo</th>
                    <th scope="col">Poster Image</th>
                    <th scope="col" class="text-end">Actions</th>
                </tr>
                <% if (data.length<=0) {%>
                    <tr>
                        <td>
                            No records to show!
                        </td>
                    </tr>
                    <% } else {%>
                        <% for(var i=0; i < data.length; i++) { %>
                            <tr>
                                <th scope="row">
                                    <%= data[i].id %>
                                </th>
                                <td>
                                    <%= data[i].client_name %>
                                </td>
                                <td>
                                    <img src="<%= data[i].client_logo %>" alt="">

                                </td>
                                <td>
                                    <img src="<%= data[i].client_poster %>" alt="">
                                </td>
                                <td class="text-end">
                                    <a href="/admin/client/<%= data[i].id %>" type="button"
                                        class="btn btn-light btn-small">View</a>
                                    <a href="/admin/client/update/<%= data[i].id %>" type="button"
                                        class="btn btn-light btn-small">Edit</a>
                                    <a href="/admin/client/delete/<%= data[i].id %>" type="button"
                                        class="btn btn-light btn-small">Delete</a>
                                </td>
                            </tr>
                            <% } %>
                                <% } %>
            </table>
        </div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
</body>

</html>
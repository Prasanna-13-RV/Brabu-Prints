<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <%- include('../partials/admin-header.ejs') %>

        <% for(var i=0; i < data.length; i++) { %>
            <form method="post" action="/admin/client/<%= data[i].id %>">
                <div>
                    <label for="client_name">Client Name</label>
                    <input type="text" class="client_name" name="client_name" id="client_name"
                        value="<%= data[i].client_name %>">
                </div>
                <div>
                    <label for="client_logo">Client Logo</label>
                    <input type="text" class="client_logo" name="client_logo" id="client_logo">
                </div>
                <div>
                    <label for="client_poster">Client Poster</label>
                    <input type="file" class="client_poster" name="client_poster" id="client_poster">
                </div>
                <input type="submit">
            </form>
            <% } %>
</body>

</html>
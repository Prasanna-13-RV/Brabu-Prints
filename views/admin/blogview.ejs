</head>

<body>
    <%- include('../partials/admin-header.ejs') %>
    
    <% for(var i=0; i < data.length; i++) { %>
        <h1>
            <%= data[i].blog_title %>
        </h1>
        <p>
            <%= data[i].blog_content %>
        </p>
        <p>
            <img src="<%= data[i].image %>" alt="">
        </p>
        <% } %>
            <a href="/admin/blog">Back to Blogs</a>
</body>

</html>
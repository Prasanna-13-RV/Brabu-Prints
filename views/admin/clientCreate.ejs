<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="shortcut icon"
		href="https://res.cloudinary.com/brabuprint/image/upload/v1643198606/BrabuPrint/default/favicon_axvgc1.png"
		type="image/png" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
	<title>Create Client | ADMIN</title>
</head>
<style>
	.adminNavClient {
		color: #da2c27 !important;
		background: #fff !important;
	}
</style>

<body>
	<%- include('../partials/admin-header.ejs') %>
		<div class="container pt-5">
			<form method="post" action="/admin/client/create" enctype="multipart/form-data">
				<div class="mb-3">
					<label class="form-label" for="client_name">
						<h3>Client Name</h3>
					</label>
					<input type="text" class="form-control form-control-sm" name="client_name" id="client_name" required
						autofocus />
				</div>
				<div class="mb-3">
					<label class="form-label" for="client_logo">
						<h3>Client Logo</h3>
					</label>
					<p style="
							color: #da2c27;
							font-size: 0.9rem;
							margin-bottom: 0;
							opacity: 0;
						" class="large-file">
						Upload files less than 2mb.
					</p>
					<input type="file" class="form-control form-control-sm" name="client_logo" id="client_logo"
						required />
				</div>
				<div class="mb-3">
					<label class="form-label" for="client_poster">
						<h3>Client Poster</h3>
					</label>
					<p style="
							color: #da2c27;
							font-size: 0.9rem;
							margin-bottom: 0;
							opacity: 0;
						" class="large-file">
						Upload files less than 2mb.
					</p>
					<input type="file" class="form-control form-control-sm" name="client_poster" id="client_poster"
						required />
				</div>
				<input class="btn" style="background-color: rgb(247, 167, 7); color: white" type="submit" />
			</form>
			<script>
				const files = document.querySelector('#client_logo');
				const largeFile = document.querySelectorAll('.large-file');
				files.addEventListener('input', (e) => {
					if (e.target.files[0].size > 2000000) {
						largeFile.forEach((file) => {
							file.style.opacity = 1;
						});
						e.target.value = '';
					} else {
						largeFile.forEach((file) => {
							file.style.opacity = 0;
						});
					}
				});
				const f = document.querySelector('#client_poster');
				// const largeFile = document.querySelector('.large-file');
				f.addEventListener('input', (e) => {
					if (e.target.files[0].size > 2000000) {
						largeFile.forEach((file) => {
							file.style.opacity = 1;
						});
						e.target.value = '';
					} else {
						largeFile.forEach((file) => {
							file.style.opacity = 0;
						});
					}
				});
			</script>
		</div>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"></script>
</body>

</html>